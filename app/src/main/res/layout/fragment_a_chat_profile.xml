<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AChatProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            android:background="@drawable/water_drop"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/fragmentBackgroundColor"/>

    <TextView
        android:id="@+id/chatProfileNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        android:text="@string/consumer_name"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/chatProfilePictureImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile_icon"/>

    <TextView
        android:id="@+id/chatProfilePositionTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:gravity="center_horizontal"
        android:text="@string/admin_header"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="260dp"
        android:background="@drawable/fragment_box"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/inverted_fragment_box"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/inverted_fragment_box"/>


    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/inverted_fragment_box"/>


    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/inverted_fragment_box"/>

    <ListView
        android:id="@+id/infoListView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="290dp"
        android:dividerHeight="35sp" />

    <ImageView
        android:id="@+id/chatProfileCircleImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/pluscircle"/>

    <ImageView
        android:id="@+id/chatProfileAddImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/ic_baseline_add_24"/>

</FrameLayout>